<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.LiveStreamSales" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Text -->
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/textSize_default</item>

        <!-- Text input layout -->
        <item name="boxCornerRadiusTopStart">@dimen/textInputLayout_cornerRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/textInputLayout_cornerRadius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/textInputLayout_cornerRadius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/textInputLayout_cornerRadius</item>

    </style>

    <style name="Theme.LiveStreamSales.SplashScreen" parent="Theme.LiveStreamSales">

        <item name="android:windowBackground">@drawable/drawable_splash_screen_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>

    </style>

    <style name="Theme.LiveStreamSales.BigMaterialButton" parent="Widget.MaterialComponents.Button">

        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="cornerRadius">@dimen/bigButton_cornerRadius</item>

    </style>

    <style name="Theme.LiveStreamSales.MaterialButton.IconOnly" parent="Widget.MaterialComponents.Button">

        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>

    </style>

    <style
        name="Theme.LiveStreamSales.MaterialButton.IconOnly.Circle"
        parent="Theme.LiveStreamSales.MaterialButton.IconOnly">

        <item name="android:minWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="shapeAppearanceOverlay">
            @style/Theme.LiveStreamSales.ShapeAppearanceOverlay.Circle
        </item>

    </style>

    <style
        name="Theme.LiveStreamSales.MaterialButton.IconOnly.Circle.Transparent"
        parent="Theme.LiveStreamSales.MaterialButton.IconOnly.Circle">

        <item
            name="android:stateListAnimator"
            tools:ignore="NewApi">@animator/mtrl_btn_unelevated_state_list_anim
        </item>
        <item name="elevation">0dp</item>
        <item name="backgroundTint">@color/mtrl_btn_text_btn_bg_color_selector</item>
        <item name="rippleColor">@color/mtrl_btn_text_btn_ripple_color</item>

    </style>

    <style name="Theme.LiveStreamSales.ShapeAppearanceOverlay.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.LiveStreamSales.ShapeAppearanceOverlay.ProductBox" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

