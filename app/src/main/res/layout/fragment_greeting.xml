<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/fragment_greeting_pager_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.6"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_greeting_proceed_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:text="@string/greeting_fragment_next_button"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@id/fragment_greeting_pager_view"
        app:layout_constraintEnd_toEndOf="@id/fragment_greeting_pager_view"
        app:layout_constraintTop_toBottomOf="@id/fragment_greeting_pager_view"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintWidth_percent="0.3"/>

    <com.rd.PageIndicatorView
        android:id="@+id/fragment_greeting_page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/fragment_greeting_proceed_button"
        app:layout_constraintEnd_toEndOf="@id/fragment_greeting_proceed_button"
        app:layout_constraintTop_toBottomOf="@id/fragment_greeting_proceed_button"
        app:piv_animationType="worm"
        app:piv_interactiveAnimation="true"
        app:piv_selectedColor="@color/colorPrimary"
        app:piv_unselectedColor="@color/colorSecondaryText"
        app:piv_viewPager="@id/fragment_greeting_pager_view"
        app:piv_radius="3dp"
        app:piv_padding="15dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_greeting_skip_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/greeting_fragment_skip_button"
        android:textAllCaps="false"
        android:textColor="@color/colorSecondaryText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_greeting_page_indicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.9"/>

</androidx.constraintlayout.widget.ConstraintLayout>