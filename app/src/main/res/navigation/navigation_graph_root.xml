<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph_root"
    app:startDestination="@id/homeDestination">

    <action
        android:id="@+id/action_global_telephoneNumberInputDestination"
        app:destination="@id/telephoneNumberInputDestination"
        app:popUpTo="@id/homeDestination"
        app:popUpToInclusive="true"/>

    <fragment
        android:id="@+id/homeDestination"
        android:label="@string/fragment_main_title"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeDestination_to_greetingDestination"
            app:destination="@id/greetingDestination"
            app:popUpTo="@id/homeDestination"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_homeDestination_to_registrationDestination"
            app:destination="@id/registrationDestination"/>

        <action
            android:id="@+id/action_homeDestination_to_liveBroadcastDestination"
            app:destination="@id/liveBroadcastDestination"/>

    </fragment>

    <fragment
        android:id="@+id/greetingDestination"
        android:label="@string/greeting_fragment_title"
        tools:layout="@layout/fragment_greeting">

        <action
            android:id="@+id/action_greetingDestination_to_mainDestination"
            app:popUpTo="@id/homeDestination"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>

    </fragment>

    <fragment
        android:id="@+id/telephoneNumberInputDestination"
        android:label="@string/fragment_telephone_number_input_title"
        tools:layout="@layout/fragment_telephone_number_input">

        <action
            android:id="@+id/action_telephoneNumberInputDestination_to_telephoneNumberConfirmationDestination"
            app:destination="@id/telephoneNumberConfirmationDestination"/>

    </fragment>

    <fragment
        android:id="@+id/telephoneNumberConfirmationDestination"
        android:label="@string/fragment_telephone_number_confirmation_title"
        tools:layout="@layout/fragment_phone_confirmation">

        <action
            android:id="@+id/action_telephoneNumberConfirmationDestination_to_registrationDestination"
            app:destination="@id/registrationDestination"
            app:popUpTo="@id/homeDestination"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/registrationDestination"
        android:label="@string/fragment_registration_title"
        tools:layout="@layout/fragment_registration">

        <action
            android:id="@+id/action_registrationDestination_to_cardConfirmationDestination"
            app:destination="@id/cardConfirmationDestination"/>

        <action
            android:id="@+id/action_registrationDestination_to_mainDestination"
            app:popUpTo="@id/homeDestination"/>

    </fragment>

    <fragment
        android:id="@+id/cardConfirmationDestination"
        android:label="@string/fragment_card_confirmation_title"/>

    <fragment
        android:id="@+id/liveBroadcastDestination"
        android:label="@string/fragment_live_broadcasts_title"
        tools:layout="@layout/fragment_live_broadcast">

        <action
            android:id="@+id/action_liveBroadcastDestination_to_productOrderDestination"
            app:destination="@id/productOrderDestination"/>

    </fragment>

    <dialog
        android:id="@+id/productOrderDestination"
        android:label="@string/dialog_product_order_title"/>

</navigation>